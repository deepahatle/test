{% extends "::backend_layout.html.twig" %}

{% block title %}Tests :: Sugarlogger{% endblock %}

{% form_theme form _self %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/js/plugins/select2/select2.min.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}
{% block form_row %}

    <div class="form-group">
        <div class="col-xs-12">
            <div class="form-material form-material-success">
                {{ form_widget(form) }}
                {{ form_label(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block content %}

	<!-- Page Content -->
	<div class="content overflow-hidden">
        <div class="row">
            <div class="col-sm-8 col-md-6">
                <!-- Register Block -->
                <div class="block block-themed animated fadeIn">
                    <div class="block-content block-content-full block-content-narrow">
                        <!-- Register Title -->
                        <h1 class="h2 font-w600 push-30-t push-5">Add Test</h1>

                        <p>Please fill the following details to add a test.</p>
                        <!-- END Register Title -->

                        <!-- Register Form -->
                        <!-- jQuery Validation (.js-validation-register class is initialized in js/pages/base_pages_register.js) -->
                        <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                        {{ form_start(form, {'attr': {'class': 'js-validation-register form-horizontal push-50-t push-50'}}) }}
                        {{ form_row(form.department) }}
                        {{ form_row(form.test) }}
                        {{ form_row(form.cost) }}

                        <div class="form-group">
                            <div class="col-xs-12 col-sm-6 col-md-5">
                                <button class="btn btn-sm btn-primary" type="submit"><i class="fa fa-check push-5-r"></i> Save</button>
                                <a class="btn btn-sm btn-danger" href="{{ path('test_render') }}"><i class="fa fa-close push-5-r"></i> Cancel</a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END Register Form -->
                    </div>
                </div>
                <!-- END Register Block -->
            </div>
        </div>
    </div>
	<!-- END Page Content -->

{% endblock %}

{% block base_javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/core/underscore-min.js') }}"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Page JS Plugins -->
    <script src="{{ asset('assets/js/plugins/jquery-validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/select2/select2.min.js') }}"></script>

    <!-- Page JS Code -->
    <script type="text/javascript">
        var TWIG = TWIG || {};
        TWIG.get_tests_by_dept = '{{ path('get_tests_by_dept') }}';
        TWIG.get_cost_by_test = '{{ path('get_cost_by_test') }}';
    </script>
    <script src="{{ asset("assets/js/pages/base_pages_add_test.js") }}"></script>
{% endblock %}
