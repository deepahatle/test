{% extends "::base.html.twig" %}


{% form_theme form _self %}
{% block form_row %}

    <div class="form-group">
        <div class="col-xs-12">
            <div class="form-material form-material-success">
                {{ form_widget(form) }}
                {{ form_label(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block body %}
    <!-- Reminder Content -->
    {{ include('::_frontend_base_header.html.twig') }}
    <div class="content overflow-hidden">
        <div class="row" style="background-color: #F5F5F5;">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 push-100-t">
                <!-- Reminder Block -->
                <div class="block block-themed animated fadeIn">
                    <div class="block-header bg-danger">
                        <h3 class="block-title">Reset Password</h3>
                    </div>
                    <div class="block-content block-content-full block-content-narrow">
                        <!-- Reminder Title -->
                        {#<a href="{{ path('home_render') }}">#}
                            {#<img class="push-30-t" src="{{ asset('assets/img/logo.png') }}" alt="Project Logo" height="40" />#}
                        {#</a>#}
                        <p>Please enter your new password</p>
                        <!-- END Reminder Title -->

                        <!-- Reminder Form -->
                        <!-- jQuery Validation (.js-validation-reminder class is initialized in js/pages/base_pages_reminder.js) -->
                        <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                        {{ form_start(form, {'attr': {'class': 'js-validation-change-pwd form-horizontal push-50-t push-50'}}) }}
                        {{ form_row(form.newPassword) }}

                        <div class="form-group">
                            <div class="col-xs-12">
                                <button class="btn btn-sm btn-danger" type="submit"><i class="fa fa-check push-5-r"></i> Submit</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END Reminder Form -->
                    </div>
                </div>
                <!-- END Reminder Block -->
            </div>
        </div>
    </div>
    <!-- END Reminder Content -->

    {#<!-- Reminder Footer -->#}
    {#<div class="push-10-t text-center animated fadeInUp">#}
        {#<small class="text-muted font-w600">&copy; SugarLogger</small>#}
    {#</div>#}
    {#<!-- END Reminder Footer -->#}
    {{ include('::_frontend_base_footer.html.twig') }}

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
    var TWIG = TWIG || {};
    TWIG.check_user = '{{ url('check_registered_email') }}';
    TWIG.send_reset_password_link = '{{ url('send_reset_password_link') }}';
    </script>
    <!-- Page JS Plugins -->
    <script src="{{ asset("assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js") }}"></script>
    <script src="{{ asset("assets/js/plugins/jquery-validation/jquery.validate.min.js") }}"></script>

    <!-- Page JS Code -->
    <script src="{{ asset("assets/js/pages/base_pages_change_pwd.js") }}"></script>

{% endblock %}