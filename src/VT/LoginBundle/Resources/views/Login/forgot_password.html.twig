{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/js/plugins/sweetalert/sweetalert.min.css') }}">
{% endblock %}

{% block body %}
    <!-- Reminder Content -->
    {{ include('::_frontend_base_header.html.twig') }}
    <div class="content overflow-hidden">
        <div class="row" style="background-color: #F5F5F5;">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 push-100-t">
                <!-- Reminder Block -->
                <div class="block block-themed animated fadeIn">
                    <div class="block-header bg-danger">
                        <h3 class="block-title">Forgot Password</h3>
                    </div>
                    <div class="block-content block-content-full block-content-narrow">
                        <!-- Reminder Title -->
                        {#<a href="{{ path('home_render') }}">#}
                            {#<img class="push-30-t" src="{{ asset('assets/img/logo.png') }}" alt="Project Logo" height="40" />#}
                        {#</a>#}
                        <p>Please provide your accountâ€™s email address.</p>
                        <!-- END Reminder Title -->

                        <!-- Reminder Form -->
                        <!-- jQuery Validation (.js-validation-reminder class is initialized in js/pages/base_pages_reminder.js) -->
                        <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                        <form class="js-validation-forgot-password form-horizontal push-30-t push-50" action="base_pages_reminder.html" method="post">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material form-material-primary">
                                        <input class="form-control" type="email" id="email" name="email" placeholder="Enter your email address">
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12 col-sm-6 col-md-5">
                                    <button class="btn btn-block btn-danger" type="submit"><i class="si si-envelope-open pull-right" style="margin-top: 0;"></i> Send Mail</button>
                                </div>
                            </div>
                        </form>
                        <!-- END Reminder Form -->
                    </div>
                </div>
                <!-- END Reminder Block -->
            </div>
        </div>
    </div>
    <!-- END Reminder Content -->

    {#<!-- Reminder Footer -->#}
    {#<div class="push-10-t text-center animated fadeInUp">#}
        {#<small class="text-muted font-w600">&copy; SugarLogger</small>#}
    {#</div>#}
    {#<!-- END Reminder Footer -->#}
    {{ include('::_frontend_base_footer.html.twig') }}

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
    var TWIG = TWIG || {};
    TWIG.check_user = '{{ url('check_registered_email') }}';
    TWIG.send_reset_password_link = '{{ url('send_reset_password_link') }}';
    </script>
    <!-- Page JS Plugins -->
    <script src="{{ asset("assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js") }}"></script>
    <script src="{{ asset("assets/js/plugins/jquery-validation/jquery.validate.min.js") }}"></script>

    <!-- Page JS Code -->
    <script src="{{ asset('assets/js/plugins/sweetalert/sweetalert.min.js') }}"></script>    
